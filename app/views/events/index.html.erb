<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Client name</th>
      <th>Course</th>
      <th>Renewal?</th>
      <th>Format</th>
      <th>Start time</th>
      <th>Trainer</th>
      <th>Num students</th>
      <th>Requested by</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.client_name %></td>
        <td><%= event.course %></td>
        <td><%= event.renewal %></td>
        <td><%= event.format %></td>
        <td><%= event.start_time.strftime("%m/%d/%Y, %l:%M%p") %></td>
        <td><%= event.trainer_id %></td>
        <td><%= event.num_students %></td>
        <td><%= event.requested_by %></td>
        <td><%= event.email %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
<%= link_to 'View Calendar', welcome_index_path %>

